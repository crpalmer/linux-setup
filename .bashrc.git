# git aliases / scripts

alias log='git log --oneline --no-merges'
alias logr='git log --reverse --oneline --no-merges'

alias gc="git cherry-pick"

gc-series() {
  logr $* | while read commit
  do
    sha1=`echo $commit | cut -d ' ' -f 1`
    if ! gc $sha1
    then
      echo
      echo
      echo $commit
      echo -n "Conflicts, resolve and hit enter: "
      read < /dev/tty
      git commit
    fi
  done
}
